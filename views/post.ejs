<% if(!locals.user){%>
  <%-include('_home-signin');%>

<%}else{%>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <link rel="stylesheet" type="text/css" href="/css/post.css">
   <div id="home-container">
      <div id="left_aside">
        <%-include('_home-feed');%>
      </div>

      <div id="center">
          <div id="question">
              <h3>Hii <%=user.name%></h3>
              <form method="POST" action="/post/create">
              <textarea placeholder="What is your question or link?" name="content"></textarea>
              <div id="btn">
                  <select required name="topic">
                      <option disabled selected>Topic</option>
                      <option>Physics</option>
                      <option>Chemistry</option>
                      <option>Computer Science</option>
                      <option>History</option>
                  </select>
                  <button type="submit">Add Question</button>
                </div>
               </form>
              </div>
              <%for(post of posts){%><%if(!(post.answers && post.answers.length)){%>
              <%}else{%>
              <div id="answer_container"> 
                   <div id="question_asked">
                       <p>Question asked by <a href="/profile/user/<%=post.user._id%>"><b><%=post.user.name%></b></a></p>
                       <h1><%=post.content%></h1>
                   </div>
               <%for(ans of post.answers){%>
               <div id="answers">
              <div class="topic_answered" id="post-<%= ans._id %>" data="<%= ans._id %>">
                    <div id="author_image">
                        <img src="<%=ans.user.avatar%>">
                        <%var flag = false;for(u of user1){%>
                            <%if(u.id == ans.user.id){%>
                              <%flag=true}%>
                              <%}%>
                            <%if(ans.user.id == user.id){%>
                             <%}else{%>
                                <%if(!flag){%>
                                    <a href="/follow/toggle/<%=ans.user._id%>" class="toggle-follow-button" data-follows="<%=ans.user.follower.length%>"><button class="c_blue" id="follow_btn"><i class="fas fa-rss"></i>  Follow</button></a>
                                <%}else{%>
                                    <a href="/follow/toggle/<%=ans.user._id%>" class="toggle-follow-button" data-follows="<%=ans.user.follower.length%>"><button class="c_grey" id="follow_btn"><i class="fas fa-check-square"></i> Following</button></a>
                                <%}%>
                            <%}%>
                    </div>
                   <div id="topic_content">
                       <div id="author_header"><span><a href="/profile/user/<%=ans.user._id%>"><%=ans.user.name%></a></span><b>Answered this question</b>
                           <span style="font-size:small">
                               <%if(locals.user && user.id==ans.user.id){%>
                                   <div class="ans_dropdown"> 
                                       <!-- three dots -->
                                       <ul class="ans_dropbtn icons btn-right showLeft">
                                           <li></li>
                                           <li></li>
                                           <li></li>
                                       </ul>
                                       <!-- menu -->
                                       <div id="ans_myDropdown" class="ans_dropdown-content">
                                           <a class="delete-post-button" href="/answer/destroy/<%=ans.id%>">Delete Answer</a>
                                           <a href="#about">Edit Answer</a>
                                       </div>
                                   </div>
                                   <%}%></br>
                                   <h3><%=ans.createdAt.toString().slice(4,10)%></h3>
                                   
                   
                           </span>
                       </div>
                       <div id="author_content">
                           <div id="ans"><p><%=ans.content%></p></div>
                       </div>
                       <div id="author_interact">
                           <%if(locals.user){%><a href="/likes/toggle/?id=<%=ans._id%>&type=Answer" class="toggle-like-button" data-likes="<%=ans.likes.length%>"><span><i class="fas fa-chevron-circle-up"></i><span><%= ans.likes.length%></span></span>Upvote</span></a><%}else{%>
                           <%=ans.likes.length%> Upvotes <%}%>
                           <a href="#"><span><i class="fas fa-sync"></i>Share</span></a>
                           <a id="comment"><span><i class="fas fa-comment"></i><%=ans.comments.length%>Comment</span></a>
                           <a href="#"><span><i class="fas fa-eye"></i>500</span></a>
                       </div>
                   
                  
   
                   </div>
              </div>
           </div>
           <%-include('_home_comments');%>
              <%}%>
           </div>  
           
   
           <%}%>
           <%}%>
              
            
      </div>
      
      <div id="right_aside">
        <%-include('_home-aside');%>
      </div>
   </div>
   <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
   <script src="/js/post.js"></script>
   <script src="/js/comment.js"></script>
   <script src="/js/toggle_likes.js"></script>
   <script src="/js/toggle_follow.js"></script>
<script>
       $('.toggle-like-button').each(function()
       {
           let self= this;
           let toggleLike = new ToggleLike(self);
       });

       $('.delete-post-button').each(function()
       {
           let self= this;
           let deleteAnswer = deletePost(this);
       });
  
       $('.toggle-follow-button').each(function()
        {
            let self= this;
            let togglefollow = new ToggleFollow(self);
        });

</script>
 <%}%>
